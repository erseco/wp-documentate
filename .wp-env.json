{
    "config": {
        "WP_DEBUG": true,
        "SCRIPT_DEBUG": true,
        "WP_DEBUG_LOG": true,
        "WP_DEBUG_DISPLAY": true
    },
    "env": {
        "development": {
            "config": {
                "WPLANG": "es_ES"
            }
        },
        "tests": {
            "config": {
                "WPLANG": "en_US" 
            }
        }
    },
    "mappings": {
        "wp-content/plugins/documentate": "./"
    },
    "plugins":  [ 
        "https://downloads.wordpress.org/plugins/tinymce-advanced.zip",
        "https://downloads.wordpress.org/plugins/sql-buddy.zip"
    ],
    "lifecycleScripts": {
        "afterStart": "wp language core install es_ES --activate && wp plugin activate documentate || true",
        "afterClean": "wp language core install es_ES --activate && wp plugin activate documentate || true"
  }
}
